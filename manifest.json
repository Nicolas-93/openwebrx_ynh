{
    "name": "OpenWebRX",
    "id": "openwebrx",
    "packaging_format": 1,
    "description": {
        "en": "SDR receiver within your Web browser"
    },
    "version": "1.2.0~ynh1",
    "url": "https://github.com/jketterl/openwebrx",
    "upstream": {
        "license": "AGPL-3.0",
        "website": "https://www.openwebrx.de",
        "userdoc": "https://github.com/jketterl/openwebrx/wiki",
        "code": "https://github.com/jketterl/openwebrx"
    },
    "license": "AGPL-3.0",
    "requirements": {
        "yunohost": ">= 11.0.0"
    },
    "multi_instance": false,
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "path",
                "type": "path",
                "example": "/webrx",
                "default": "/webrx"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "password",
                "type": "password"
            },
            {
                "name": "install_dream",
                "type": "boolean",
                "ask": {
                    "en": "Compile and install DREAM to support Digital Radio Mondial decoding in OpenWebRX"
                },
                "default": false
            }
        ]
    }
}
